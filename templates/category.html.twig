<script>
    const movieList = document.getElementById('movieList');
    const loadMoreMovies = document.getElementById('loadMoreMovies');
    let currentPage = 1;

    loadMoreMovies.addEventListener('click', () => {
        fetch(`{{ path('show_category_async', {id: category.id}) }}?page=${currentPage}`)
            .then(response => response.text())
            .then(data => {
                movieList.insertAdjacentHTML('beforeend', data);
                currentPage++;
            });
    });
